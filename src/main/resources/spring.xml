<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.agapovp.epam.spring.core.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="consoleEventLogger" class="com.agapovp.epam.spring.core.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.agapovp.epam.spring.core.FileEventLogger"
          init-method="init">
        <constructor-arg value="src\main\resources\log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.agapovp.epam.spring.core.CacheFileEventLogger"
          init-method="init"
          destroy-method="destroy">
        <constructor-arg value="src\main\resources\log.txt"/>
        <constructor-arg value="3"/>
    </bean>

    <bean id="app" class="com.agapovp.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="event" class="com.agapovp.epam.spring.core.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>
</beans>
